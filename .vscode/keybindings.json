// Place your key bindings in this file to override the defaults
[
    { "key": "alt+s", "when": "", "command": "workbench.action.files.save" },
    { "key": "shift+alt+s", "when": "", "command": "workbench.action.files.saveAs" },
    { "key": "ctrl+alt+s", "when": "", "command": "workbench.action.files.saveAll" },
    { "key": "alt+w", "when": "", "command": "workbench.action.closeActiveEditor" },
    { "key": "alt+a", "when": "", "command": "editor.action.selectAll"},
    { "key": "alt+x", "when": "", "command": "editor.action.clipboardCutAction"},
    { "key": "alt+c", "when": "", "command": "editor.action.clipboardCopyAction"},
    { "key": "alt+v", "when": "", "command": "editor.action.clipboardPasteAction"},
    { "key": "alt+z", "when": "", "command": "undo"},
    { "key": "alt+y", "when": "", "command": "redo"},
    { "key": "ctrl+a", "when": "editorTextFocus", "command": "cursorWordLeft" },
    { "key": "ctrl+f", "when": "editorTextFocus", "command": "cursorWordRight" },
    { "key": "ctrl+s", "when": "editorTextFocus", "command": "cursorLeft" },
    { "key": "ctrl+d", "when": "editorTextFocus", "command": "cursorRight" },
    { "key": "ctrl+x", "when": "editorTextFocus", "command": "cursorDown" },
    { "key": "ctrl+e", "when": "editorTextFocus", "command": "cursorUp" },
    { "key": "ctrl+w", "when": "editorTextFocus", "command": "scrollLineUp" },
    { "key": "ctrl+z", "when": "editorTextFocus", "command": "scrollLineDown" },
    { "key": "ctrl+r", "when": "editorTextFocus", "command": "scrollPageUp" },
    { "key": "ctrl+c", "when": "editorTextFocus", "command": "scrollPageDown" },
    { "key": "ctrl+n", "when": "editorTextFocus", "command": "editor.action.insertLineBefore"},
    { "key": "ctrl+y", "when": "editorTextFocus", "command": "editor.action.deleteLines"},
    { "key": "ctrl+2", "when": "", "command": "actions.find" },
    { "key": "ctrl+l", "when": "", "command": "editor.action.previousMatchFindAction" },
    { "key": "ctrl+p", "when": "", "command": "editor.action.nextMatchFindAction" },
    { "key": "ctrl+o", "when": "", "command": "editor.action.startFindReplaceAction"},
    { "key": "ctrl+q ctrl+s", "when": "editorTextFocus", "command": "cursorLineStart" },
    { "key": "ctrl+q ctrl+d", "when": "editorTextFocus", "command": "cursorLineEnd" },
    { "key": "ctrl+q ctrl+r", "when": "editorTextFocus", "command": "cursorTop" },
    { "key": "ctrl+q ctrl+c", "when": "editorTextFocus", "command": "cursorBottom" },
    { "key": "ctrl+q ctrl+y", "when": "editorTextFocus", "command": "deleteAllRight" }
]
